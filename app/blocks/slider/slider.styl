.slider
	position relative
	display flex
	align-items flex-end
	width 100%
	height 70px
	font-size 13px

.slider__list
	position relative
	display flex
	justify-content space-between
	align-items flex-start
	width 100%
	&:before
		position absolute
		top -34px
		left 0
		display block
		width 100%
		height 11px
		content ''
		background url('../../images/vertical-line.png') no-repeat
		background-size 100% auto

.slider__item
	position relative
	display flex
	justify-content flex-end
	flex-direction column
	max-width 180px
	
	&:before
		position absolute
		transform rotate(-90deg) translate(-50%, -100%)
		top -30px
		display block
		width 10px
		height 7px
		content ''
		background url('../../images/vertical-line.png')

	&:last-child:before
		right -15px
		left auto 
		width 25px

	&:first-child:before
		left -7px
		width 25px

.slider__pointer
	position absolute
	top 0
	left 0
	transform translateX(-50%)
	width 17px
	height 14px
	sprite $pointer