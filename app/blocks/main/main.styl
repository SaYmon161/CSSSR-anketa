.main
	display block

.main__title
	margin-bottom 40px
	padding-right 25px
	align-self center

.main__info
	margin-bottom 60px

.main__subtitle
	margin-bottom 10px
	font-size 24px
	font-weight 700

.main__desc
	margin-bottom 28px
	font-size 15px
	line-height 1.5

.main__desc--less-margin
	margin-bottom 18px

.main__skills
	margin-bottom 40px

.main__skills-list
	display flex
	flex-flow column wrap
	align-items space-between
	height 255px

.main__skills-item
	margin-bottom 15px
	width 34%
	&:last-child
		margin-bottom 0

.main__slider
	margin-bottom 45px

.main__about
	margin-bottom 60px

.main__plans
	margin-bottom 70px

.main__plans-list
	display flex

.main__plans-item
	margin-right 20px
	&:last-child
		margin-right 0

.main__date
	height 160px