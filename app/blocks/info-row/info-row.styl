.info-row
	margin-bottom 7px
	display block
	
.info-row__label
	display flex
	justify-content stretch
	align-items center

.info-row__text
	margin-right 15px
	padding-top 20px
	font-size 22.5px
	font-weight 700

.info-row__input
	padding 0 19px
	height 55px
	flex-grow 1
	font-family 'Courier New'
	font-size 30px
	line-height 1.83333333
	background url('../../images/textarea-line.png') bottom no-repeat
	background-color transparent
	border none

.info-row__input::-ms-clear
	display none