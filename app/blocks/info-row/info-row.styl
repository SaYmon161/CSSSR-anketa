.info-row
	display block
	
.info-row__label
	display flex
	justify-content stretch
	align-items center

.info-row__text
	margin-right 15px
	padding-top 20px
	font-size 22.5px
	font-weight 700

.info-row__input
	padding 0 19px
	flex-grow 1
	font-family 'Courier New'
	font-size 30px
	line-height 1.83333333
	background transparent url('../../images/textarea-line.png') bottom no-repeat / 100% auto
	border none